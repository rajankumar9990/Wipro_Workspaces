<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AmazonSuite">

    <test name="Ecommerce Tests">

        <!-- Run specific groups -->
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
                <include name="sanity"/>
               
                
            </run>
        </groups>

        <classes>
            <class name="com.selenium_testng.day28.Ecommerce2">
                <methods>
                    <!-- Explicitly include setup and close if needed -->
					<include name="setup" />
					<include name="close" />

					<!-- Include all other methods (smoke, regression, sanity) -->
                    <include name=".*"/>
                </methods>
            </class>
        </classes>

    </test>

</suite>
